<Window x:Class="SimpleInputWindow.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleInputWindow"
        mc:Ignorable="d"
        Title="InputWindow" Height="100" Width="280"
        MaxWidth="280" MinWidth="280">
    <StackPanel>
        <ScrollViewer HorizontalContentAlignment="Center">
            <Grid Name="gridInputs">
                <Button Name="btnConfirm" Content="Confirm" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Bottom" Width="100" Click="BtnConfirm_Click"/>
            </Grid>
        </ScrollViewer>
    </StackPanel>
</Window>
